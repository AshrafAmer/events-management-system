                    </a>
                    <% } %>
                </li>
                <li class="nav-item px-lg-4">
                    <a
                        class="nav-link text-uppercase text-expanded"
                        href="/events/list"
                        >Events</a
                    >
                </li>
                <% if(role === "admin"){ %>
                <li class="nav-item px-lg-4">
                    <a
                        class="nav-link text-uppercase text-expanded"
                        href="/events/decline"
                        >Decline Events</a
                    >
                </li>
                <li class="nav-item px-lg-4">
                    <a
                        class="nav-link text-uppercase text-expanded"
                        href="/speakers/list"
                        >Speakers</a
                    >
                </li>
                <% } %>
                <li class="nav-item px-lg-4">
                    <a
                        class="nav-link text-uppercase text-expanded"
