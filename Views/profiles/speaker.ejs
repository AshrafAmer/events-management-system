<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./../include/header.ejs") %>
    </head>

    <body>
        <%- include("./../include/navbar.ejs") %>

        <section class="page-section cta">
            <div class="container">
                <div class="row">
                    <div
                        class="col-8 mx-auto p-1"
                        style="border:solid 3px rgba(255, 255, 255, 0.85); border-radius: 25px;"
                    >
                        <div class="cta-inner text-center rounded">
                            <div class="box box-primary">
                                <div class="box-body box-profile">
                                    <img
                                        class="img-responsive img-circle"
                                        style="border-radius: 50%; width: 50%; height: 65%;"
                                        src="/profiles/<%= speaker[0].image %>"
                                        alt="User profile picture"
                                    />

                                    <h3
                                        class="profile-username text-center mt-2"
                                    >
                                        <%= speaker[0].fullName %>
                                    </h3>

                                    <p class="text-muted text-center">
                                        ITI Events Main Speaker
                                    </p>

                                    <ul
                                        class="list-group list-group-unbordered mb-4"
                                    >
                                        <li class="list-group-item text-center">
                                            <b>City</b>
                                            <span class="ml-2"
                                                ><%= speaker[0].address.city
                                                %></span
                                            >
                                        </li>
                                        <li class="list-group-item text-center">
                                            <b>Street</b>
                                            <span class="ml-5"
                                                ><%= speaker[0].address.street
                                                %></span
                                            >
                                        </li>
                                        <li class="list-group-item">
                                            <b>Building</b>
                                            <span class="ml-5"
                                                ><%= speaker[0].address.building
                                                %></span
                                            >
                                        </li>
                                    </ul>

                                    <span>
                                        <a
                                            class="btn btn-dark btn-outline-info text-white"
                                            data-toggle="modal"
                                            data-target="#updateSpeakerProfile"
                                            data-title="<%= JSON.stringify(speaker[0]) %>"
                                            >Edit profile</a
                                        >
                                    </span>
                                </div>
                                <!-- /.box-body -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include("./../include/footer.ejs") %> <%-
        include("profileUpdateModal.ejs") %>
    </body>
</html>
